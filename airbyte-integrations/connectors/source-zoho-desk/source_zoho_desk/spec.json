{
  "documentationUrl": "https://docsurl.com",
  "connectionSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Zoho Desk Spec",
    "type": "object",
    "required": ["client_id", "client_secret", "refresh_token", "token_refresh_endpoint"],
    "additionalProperties": false,
    "properties": {
        "client_id": {
          "type": "string"
        },
        "client_secret": {
          "type": "string"
        },
        "refresh_token": {
          "type": "string"
        },
        "token_refresh_endpoint": {
          "type": "string",
          "description": "Absolute URL to the endpoint used for refreshing access token."
        }
      }
    }
  }

